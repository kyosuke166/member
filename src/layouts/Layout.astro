---
// Tailwind v4 をプロジェクトに反映させるために必要
import '../styles/global.css';

// 親（各ページ）から渡されるプロパティを受け取る
interface Props {
    title?: string;
}

const { title = "SBTフリーランス" } = Astro.props;
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-slate-50 text-slate-900">
        <slot />
    </body>
</html>

<style is:global>
    /* サイト全体の共通設定 */
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    /* プレースホルダーの色をサイト全体で統一（薄め） */
    input::placeholder,
    textarea::placeholder {
        color: #94a3b8; /* Tailwindのslate-400相当 */
        opacity: 1;    /* Firefoxでの透明度リセット */
    }

    /* フォーカス時のプレースホルダー色 */
    input:focus::placeholder,
    textarea:focus::placeholder {
        color: #cbd5e1; /* Tailwindのslate-300相当 */
    }
</style>