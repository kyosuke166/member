---
import Layout from '../layouts/Layout.astro';
---

<Layout title="ログイン | SBTフリーランス">
  <style>
    /* ページ全体のレイアウト（Layout.astroの外側と調和させる） */
    .login-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f0f2f5; /* 画像通りの落ち着いた薄いグレー */
      margin: 0;
    }

    /* 中央の白いカード */
    .login-card {
      background: white;
      padding: 3rem 2.5rem; /* 上下の余白を少し広めに */
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.05); /* 柔らかい影 */
      width: 100%;
      max-width: 420px;
      box-sizing: border-box;
    }

    /* ロゴ・タイトル部分 */
    .logo {
      text-align: center;
      font-weight: 800;
      font-size: 2rem;
      color: #0056b3;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
    }
    .subtitle {
      text-align: center;
      color: #666;
      font-size: 0.95rem;
      margin-bottom: 2.5rem;
      font-weight: 500;
    }

    /* フォーム入力 */
    .form-group {
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin-bottom: 0.6rem;
      font-size: 0.9rem;
      color: #334155;
      font-weight: 700;
    }
    input {
      width: 100%;
      padding: 0.85rem 1rem;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      box-sizing: border-box;
      font-size: 1rem;
      transition: all 0.2s;
    }
    input:focus {
      border-color: #0056b3;
      outline: none;
      box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
    }

    /* ログインボタン（画像通りの濃い青） */
    .login-btn {
      width: 100%;
      padding: 1rem;
      background: #0056b3;
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 700;
      cursor: pointer;
      font-size: 1.1rem;
      margin-top: 1rem;
      transition: background 0.2s;
    }
    .login-btn:hover {
      background: #004494;
    }

    /* 下部リンク */
    .footer-links {
      text-align: center;
      margin-top: 2rem;
      font-size: 0.85rem;
      color: #64748b;
    }
    .footer-links a {
      color: #0056b3;
      text-decoration: none;
      font-weight: 500;
    }
    .footer-links a:hover {
      text-decoration: underline;
    }
    .signup-area {
      margin-top: 1rem;
      padding-top: 1.5rem;
      border-top: 1px solid #f1f5f9;
    }
  </style>

  <div class="login-container">
    <div class="login-card">
      <div class="logo">SBTフリーランス</div>
      <div class="subtitle">メンバー専用ポータル</div>
      
      <form action="/api/login-check.php" method="POST">
        <div class="form-group">
          <label for="email">メールアドレス</label>
          <input 
            type="email" 
            id="email"
            name="email" 
            required 
            placeholder="example@sbt-inc.co.jp" 
          />
        </div>
        <div class="form-group">
          <label for="password">パスワード</label>
          <input 
            type="password" 
            id="password"
            name="password" 
            required 
            placeholder="••••••••"
          />
        </div>
        <button type="submit" class="login-btn">ログイン</button>
      </form>

      <div class="footer-links">
        <a href="/password-reset">パスワードを忘れた方はこちら</a>
        <div class="signup-area">
          アカウントをお持ちでない方は 
          <a href="/register">新規会員登録</a>
        </div>
      </div>
    </div>
  </div>
</Layout>